@page
@model PRReviewProject.Pages.Staff.CreateModel
@{
    ViewData["Title"] = "Add New Staff";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Staff Member</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.FirstName" class="form-label"></label>
                                <input asp-for="Staff.FirstName" class="form-control" />
                                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.LastName" class="form-label"></label>
                                <input asp-for="Staff.LastName" class="form-control" />
                                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.Contact" class="form-label"></label>
                                <input asp-for="Staff.Contact" class="form-control" placeholder="e.g., +1-234-567-8900" />
                                <span asp-validation-for="Staff.Contact" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.Email" class="form-label"></label>
                                <input asp-for="Staff.Email" class="form-control" type="email" placeholder="email@example.com" />
                                <span asp-validation-for="Staff.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.Department" class="form-label"></label>
                                <input asp-for="Staff.Department" class="form-control" placeholder="e.g., IT, HR, Finance" />
                                <span asp-validation-for="Staff.Department" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Staff.Position" class="form-label"></label>
                                <input asp-for="Staff.Position" class="form-control" placeholder="e.g., Developer, Manager" />
                                <span asp-validation-for="Staff.Position" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">Save Staff Information</button>
                            <a href="/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}